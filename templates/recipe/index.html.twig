{% extends 'base.html.twig' %}

{% block title "Recettes" %}

{% block body %}
    Mes recettes

    <p>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Similique et, accusamus cupiditate tenetur iste maiores, maxime quibusdam inventore, atque aut labore at vel harum. Ab libero obcaecati nemo autem eius.
    </p>

        
    <a class="btn btn-success" href="{{ path('recipe.create') }}">Cr√©er une recette</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>
                    <a href="{{path('recipe.show', {id: recipe.id, slug: recipe.slug})}}">{{ recipe.title }}</a>
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary" href="{{path('recipe.edit', {id: recipe.id})}}">Editer</a>
                        <form action="{{path('recipe.delete', {id: recipe.id})}}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </td>              
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

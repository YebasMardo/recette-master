{% extends 'admin/admin.html.twig' %}

{% block title "Recettes" %}

{% block body %}    
    <a class="btn btn-success" href="{{ path('admin.recipe.create') }}">Créer une recette</a>
    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Catégorie</th>
                <th style="width: 200px">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>
                    <a href="{{path('admin.recipe.edit', {id: recipe.id})}}">{{ recipe.title }}</a>
                </td>
                <td>
                    {{ recipe.category.name | default('') }}
                </td>
                <td>
                    <div class="d-flex gap-1">
                        <a class="btn btn-primary" href="{{path('admin.recipe.edit', {id: recipe.id})}}">Editer</a>
                        <form action="{{path('admin.recipe.delete', {id: recipe.id})}}" method="post">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </td>              
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
